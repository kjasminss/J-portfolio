    <script>
    $(function () {
    $('#ate').click(function () {
       
        var h = parseFloat($('#HEIGHT').val());
        var w = parseFloat($('#WEIGHT').val());

        if (!h || !w) {
        alert('請輸入身高與體重');
        return;
        }

        var bmi = w / (h * h);
        $('#RESULT').val(bmi.toFixed(2));
    });
    });
    </script>


